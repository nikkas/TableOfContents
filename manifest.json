{
  "version": "2010.10.23.1",
  "name": "TableOfContents",
  "description": "Creates the Table-of-Contents of selected tab.",
  "background_page": "toc-background.html",

  "content_scripts": [{
    "css": [ "toc.css" ],
    "js": ["toc-jquery-1.4.3.min.js", "toc.js"],
    "matches": [ "<all_urls>"],
    "run_at": "document_end"
  }],

  "browser_action": {
    "default_icon": "toc-img-16.png",
    "default_name": "TableOfContens"
  },

  "permissions": [ "tabs", "http://*/*", "https://*/*"],

  "icons": { "16": "toc-img-16.png",
             "48": "toc-img-48.png",
            "128": "toc-img-128.png" }
}